extends layout

block content
  .main.container.auth
        form(method='POST' action='/login').form
          div.form-group
            label(for='Username') Username
            input.form-control(type='text' id='username' placeholder='Username' name='Username')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.front.btn.btn-primary(type='submit') Log in 

          a(href="register"): button.front.btn.btn-primary(type="button") Register
          
          a(href="lobby"): button.front.btn.btn-primary(type="button") Lobby
