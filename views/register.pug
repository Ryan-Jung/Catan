extends layout

block content
   .main.container.auth
        form(method='POST' action='/register').form
          div.form-group
            label(for='e-mail') E-mail
            input.form-control(type='text' id='e-mail' placeholder='E-mail' name='e-mail')
          div.form-group
            label(for='username') Username:
            input#name.form-control(type='text', placeholder='Ex: elitedragonslayer' name='username')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.front.btn.btn-primary(type='submit') Sign up